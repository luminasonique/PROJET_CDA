{% extends 'base.html.twig' %}

{% block title %}UserInfo index{% endblock %}

{% block body %}
    <h1>UserInfo index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>User_cv</th>
                <th>User_linkedin</th>
                <th>User_git</th>
                <th>User_description</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user_info in user_infos %}
            <tr>
                <td>{{ user_info.id }}</td>
                <td>{{ user_info.userCv }}</td>
                <td>{{ user_info.userLinkedin }}</td>
                <td>{{ user_info.userGit }}</td>
                <td>{{ user_info.userDescription }}</td>
                <td>{{ user_info.createdAt ? user_info.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ user_info.updatedAt ? user_info.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_user_info_show', {'id': user_info.id}) }}">show</a>
                    <a href="{{ path('app_user_info_edit', {'id': user_info.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_user_info_new') }}">Create new</a>
{% endblock %}
