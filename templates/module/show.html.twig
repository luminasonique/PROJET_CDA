{% extends 'base.html.twig' %}

{% block title %}Module{% endblock %}

{% block body %}
    <h1>Module</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ module.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ module.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ module.description }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ module.content }}</td>
            </tr>
            <tr>
                <th>Repository_link</th>
                <td>{{ module.repositoryLink }}</td>
            </tr>
            <tr>
                <th>Module_order</th>
                <td>{{ module.moduleOrder }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ module.duration }}</td>
            </tr>
            <tr>
                <th>Is_updated</th>
                <td>{{ module.isUpdated ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ module.status }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ module.createdAt ? module.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ module.updatedAt ? module.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_module_index') }}">back to list</a>

    <a href="{{ path('app_module_edit', {'id': module.id}) }}">edit</a>

    {{ include('module/_delete_form.html.twig') }}
{% endblock %}
