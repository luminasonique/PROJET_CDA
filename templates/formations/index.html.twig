{% extends 'base.html.twig' %}

{% block title %}Formations index{% endblock %}

{% block body %}
    <h1>Formations index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Date_session</th>
                <th>Satus_actif</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for formation in formations %}
            <tr>
                <td>{{ formation.id }}</td>
                <td>{{ formation.nom }}</td>
                <td>{{ formation.dateSession ? formation.dateSession|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ formation.satusActif }}</td>
                <td>
                    <a href="{{ path('app_formations_show', {'id': formation.id}) }}">show</a>
                    <a href="{{ path('app_formations_edit', {'id': formation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_formations_new') }}">Create new</a>
{% endblock %}
